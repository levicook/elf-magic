#!/bin/bash
set -euo pipefail

# Install Solana CLI for cargo build-sbf
echo "ðŸ”§ Installing Solana CLI..."

if command -v solana >/dev/null 2>&1; then
    echo "âœ… Solana CLI already installed:"
    solana --version
    cargo build-sbf --version
    exit 0
fi

# Install Solana CLI using Anza installer
sh -c "$(curl -sSfL https://release.anza.xyz/stable/install)"

# Update PATH for current shell session
export PATH="$HOME/.local/share/solana/install/active_release/bin:$PATH"

echo "âœ… Solana CLI installed:"
solana --version
cargo build-sbf --version
